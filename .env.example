# Slouching Detector Environment Variables
# Copy this file and rename it to .env, then fill in your actual API keys and settings

# ======================
# Roboflow Configuration
# ======================
# Get these from your Roboflow account: https://roboflow.com/
ROBOFLOW_API_KEY=your_roboflow_api_key_here
ROBOFLOW_PROJECT=your_project_name
ROBOFLOW_VERSION=1

# ========================
# Spotify Configuration
# ========================
# Create a Spotify app at: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback

# ======================
# Detection Settings
# ======================
# Confidence threshold for AI model (0.0 to 1.0)
CONFIDENCE_THRESHOLD=0.5

# How often to check posture in seconds
DETECTION_INTERVAL=1.0

# ========================
# Brightness Settings
# ========================
# Brightness percentage (0-100) for good posture
NORMAL_BRIGHTNESS=100

# Brightness percentage (0-100) when slouching
SLOUCHING_BRIGHTNESS=20

# ========================
# Sleep Mode Settings
# ========================
# Seconds to wait before sleep when user is absent
USER_ABSENT_TIMEOUT=30
